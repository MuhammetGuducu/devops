{
  "name": "bachelor-projekt",
  "version": "1.0.0",
  "description": "DevOps-Demo-Service f√ºr CI/CD-Pipeline Bachelorarbeit",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "set NODE_ENV=test && jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:local": "NODE_ENV=test jest --watchAll"
  },
  "keywords": [
    "devops",
    "ci-cd",
    "aws",
    "app-runner"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.848.0",
    "aws-xray-sdk-core": "^3.10.1",
    "express": "^4.21.1",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "index.js"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml"
  }
}
